@{
    ViewBag.Title = "MenuAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4 mb-4">Panel de Administración</h2>

<div class="container">
    <div class="row gy-4">
        <!-- Modificar Usuarios -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Modificar Usuarios</h5>
                    <p class="card-text flex-grow-1">
                        Gestiona la lista de usuarios, crea, edita o elimina cuentas.
                    </p>
                    <a href="@Url.Action("Index", "Usuarios")"
                       class="btn btn-primary mt-auto">
                        Ir a Usuarios
                    </a>
                </div>
            </div>
        </div>

        <!-- Modificar Clientes -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Modificar Clientes</h5>
                    <p class="card-text flex-grow-1">
                        Administra la información de tus clientes y sus datos.
                    </p>
                    <a href="@Url.Action("Index", "Clientes")"
                       class="btn btn-primary mt-auto">
                        Ir a Clientes
                    </a>
                </div>
            </div>
        </div>

        <!-- Modificar Noticias -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Modificar Noticias</h5>
                    <p class="card-text flex-grow-1">
                        Crea, edita o elimina artículos y noticias de tu sitio.
                    </p>
                    <a href="@Url.Action("Index", "Noticias")"
                       class="btn btn-primary mt-auto">
                        Ir a Noticias
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
