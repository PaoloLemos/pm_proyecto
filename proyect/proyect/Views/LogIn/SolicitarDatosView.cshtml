
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solicitar Datos</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Iconos de Font Awesome (para el ícono de "fas fa-cubes") -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="~/Styles/Styles.css" />
</head>
<body>
    <section class="vh-100" style=" background: linear-gradient(to bottom, #2b7bb9, #1a2c3a); ">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/imagenes/Liquid Clothing Logo.png"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="post" action="@Url.Action("Index","LogIn")" class="needs-validation" novalidate>
                                        @Html.AntiForgeryToken()

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <img src="~/imagenes/logo1.png" class="fas fa-cubes fa-2x me-3" style="color: #ff6219; height:80px;" />
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">
                                            Inicia sesión en tu cuenta
                                        </h5>

                                        <div class="form-outline mb-4">
                                            <input type="email"
                                                   name="email"
                                                   class="form-control form-control-lg"
                                                   placeholder="Correo electrónico"
                                                   required />
                                            <label class="form-label" for="email">Correo electrónico</label>
                                            <div class="invalid-feedback">
                                                Por favor ingresa un correo válido.
                                            </div>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password"
                                                   name="password"
                                                   class="form-control form-control-lg"
                                                   placeholder="Contraseña"
                                                   required />
                                            <label class="form-label" for="password">Contraseña</label>
                                            <div class="invalid-feedback">
                                                Por favor ingresa tu contraseña.
                                            </div>
                                        </div>

                                        @if (ViewBag.Error != null)
                                        {
                                            <p class="text-danger">@ViewBag.Error</p>
                                        }

                                        <div class="pt-1 mb-4">
                                            <button type="submit" class="btn btn-dark btn-lg btn-block">
                                                Iniciar sesión
                                            </button>
                                        </div>
                                    </form>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>